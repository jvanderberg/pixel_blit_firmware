;
; WS2811 PIO program for rainbow test
; Single-pin output using sideset
;

.pio_version 0

.program rainbow_ws2811
.side_set 1

; WS2811 timing (800kHz):
; T0H: 350ns, T0L: 800ns
; T1H: 700ns, T1L: 600ns
; Using T1=3, T2=3, T3=4 cycles gives good compatibility

.define public T1 3
.define public T2 3
.define public T3 4

.wrap_target
bitloop:
    out x, 1       side 0 [T3 - 1] ; Drive low, shift out next bit
    jmp !x do_zero side 1 [T1 - 1] ; Drive high, branch on bit value
do_one:
    jmp  bitloop   side 1 [T2 - 1] ; Stay high for 1-bit
do_zero:
    nop            side 0 [T2 - 1] ; Drive low for 0-bit
.wrap

% c-sdk {
#include "hardware/clocks.h"

static inline void rainbow_ws2811_program_init(PIO pio, uint sm, uint offset, uint pin, float freq) {
    pio_gpio_init(pio, pin);
    pio_sm_set_consecutive_pindirs(pio, sm, pin, 1, true);

    pio_sm_config c = rainbow_ws2811_program_get_default_config(offset);
    sm_config_set_sideset_pins(&c, pin);
    sm_config_set_out_shift(&c, false, true, 24);  // 24 bits for RGB
    sm_config_set_fifo_join(&c, PIO_FIFO_JOIN_TX);

    int cycles_per_bit = rainbow_ws2811_T1 + rainbow_ws2811_T2 + rainbow_ws2811_T3;
    float div = clock_get_hz(clk_sys) / (freq * cycles_per_bit);
    sm_config_set_clkdiv(&c, div);

    pio_sm_init(pio, sm, offset, &c);
    pio_sm_set_enabled(pio, sm, true);
}
%}
